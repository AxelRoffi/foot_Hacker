

<div id="fullscreen_bg" class="fullscreen_bg align-center"/>
<div id="regContainer" class="container">
      <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-login">
          <div class="panel-body">
            <div class="row">
              <div class="col-lg-12">
              <div class="h2" style="font-family: montserrat; font-size: 20px;">
              <h2><center>Login</center></h2>
              </div>
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-inputs">
                    <%= f.input :email, required: false, autofocus: true %>
                    <%= f.input :password, required: false %>
                    <center><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></center>
                  </div>
                    <div class="form-actions">
                    <center>
                        <%= f.button :submit, "Log In" %>
                        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                          <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default"%>
                          </center>

                        <% end -%>
                      <%= render "devise/shared/links" %>
                   </div>
                      <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
