
<ul>
<% @local_team_players.each do |lplayer| %>
    <li> <%= lplayer.player.last_name%> </li>
    <% if lplayer.player.image != nil %>
      <li> <%= image_tag lplayer.player.image %> </li>
    <% end %>

    <% if lplayer.player.ratings.where(game_id: @game.id).blank?%>
      <%= simple_form_for([ @game, @rating ]) do |form| %>
        <%= form.input :score, collection: 0..10 %>
        <%= form.hidden_field :player_id, value: lplayer.player.id %>
        <%= form.button :submit %>
      <% end %>
    <% else %>
      <%= lplayer.player.ratings.where(game_id: @game.id)[0].score  %>
    <% end %>

 <% end %>
</ul>


 <% @visitor_team_players.each do |vplayer| %>
    <%= vplayer.player.last_name %>
    <% if vplayer.player.image != nil %>
      <%= image_tag vplayer.player.image %>
    <% end %>
    <%= simple_form_for([ @game, @rating ]) do |form| %>
      <%= form.input :score, collection: 0..10 %>
      <%= form.hidden_field :player_id, value: vplayer.player.id %>
      <%= form.button :submit %>
    <% end %>

  <% end %>


<div class="container">
  <div class="row text-center">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="tabs flexy">
        <a class="tab active" data-target="#localteam">
          <h3>Local team</h3>
        </a>
        <a class="tab" data-target="#visitorteam">
          <h3>Visitor team</h3>
        </a>
      </div>
    </div>
  </div>
  <div class="row">

    <div class="text-center">
      <div class="tab-content" id="localteam">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <h1>Rating Players</h1>
            </div>
          </div>
          <div class="row">
           <% @local_team_players.each do  |vplayer| %>
           <div class="col-md-4 col-sm-6 col-xs-12">
             <%= render "playercard", vplayer: vplayer %>
           </div>
           <% end %>
         </div>
       </div>
     </div>
     <div class="tab-content hidden" id="visitorteam">
      <% @visitor_team_players.each do |vplayer| %>
      <div class="col-md-4 col-sm-6 col-xs-12">
       <%= render "playercard", vplayer: vplayer %>
     </div>
     <% end %>
   </div>
 </div>

</div>
</div>








